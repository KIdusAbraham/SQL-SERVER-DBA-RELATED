FROM sys.configurations
WHERE name = 'Ad Hoc Distributed Queries') = 1
BEGIN
	exec ('EXECUTE sp_configure ''show advanced options'', 1;')
	exec ('RECONFIGURE;')
	exec ('EXECUTE sp_configure ''Ad Hoc Distributed Queries'', 0;')
	exec ('RECONFIGURE;')
	exec ('EXECUTE sp_configure ''show advanced options'', 0;')
	exec ('RECONFIGURE;')
END
ELSE
BEGIN
	exec master..xp_cmdshell 'echo ''SEG_2.1,CIS,Ensure ''Ad Hoc Distributed Queries'' Server Configuration Option is set to ''0'',Comply,No remediation,El par치metro "Ad Hoc Distributed Queries" esta deshabilitado>> C:\Hardening\Hardnening_Resume.txt'''
END

